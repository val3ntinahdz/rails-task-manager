<div class="container mt-4">
  <h1 class="display-2 pb-3">My Tasks</h1>

  <% @tasks.each do |task| %>
    <p>
    <% if task.completed %>
      <input type="checkbox" checked>
    <% else %>
      <input type="checkbox"
    <% end %>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to "Delete", task_path(task.id), data: {turbo_method: :delete, turbo_confirmation: "Estas seguro/a que quieres borrar este registro?"} %>
    </p>
  <% end %>

  <%= link_to "+ Add a new task", new_task_path %>
</div>
